{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "types": ["jasmine", "node"],
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": "."
    },
    "include": [
        "index.ts",
        "./src/typescript/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}
